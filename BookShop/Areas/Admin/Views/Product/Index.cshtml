@{
    ViewData["Title"] = "Products";
}
@model List<Product>


<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h4 class"text-primary">
                Product list
            </h4>
        </div>

        <div class="col-6 text-end">
            <a asp-contoller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>

    </div>
</div>

<table id="tblData" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                ISBN
            </th>
            <th>
                Author
            </th>
            <th>
                ListPrice
            </th>
            <th>
                Category
            </th>
            <th>

            </th>
        </tr>
    </thead>
    @* <tbody>

    </tbody> *@
</table>

@section Scripts {
    @{
        <script src="~/js/product.js"></script>
    }
}