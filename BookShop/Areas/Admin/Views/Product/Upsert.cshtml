@model ProductViewModel
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @(Model.Product.Id != 0 ? "Edit" : "Create") Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 text-white">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-10">
                <div class="border p-3">
                    <input asp-for="Product.Id" hidden />
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Title" class="form-control border-0x shadow" />
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                        <label asp-for="Product.Title" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Description" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                        <label asp-for="Product.Description" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        <label asp-for="Product.ISBN" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Author" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Author" class="text-danger"></span>
                        <label asp-for="Product.Author" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="number" asp-for="Product.Price" step="0.01" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                        <label asp-for="Product.Price" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="number" asp-for="Product.ListPrice" step="0.01" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        <label asp-for="Product.ListPrice" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="number" asp-for="Product.Price50" step="0.01" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        <label asp-for="Product.Price50" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="number" asp-for="Product.Price100" step="0.01" class="form-control border-0 shadow" />
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        <label asp-for="Product.Price100" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                            <option disabled select>--Select Category--</option>
                        </select>
                        <label asp-for="Product.CategoryId" class="ms-2 text-dark"></label>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input type="file" name="file" asp-for="Product.ImageUrl" class="form-control border-0 shadow" />
                        <label asp-for="Product.ImageUrl" class="ms-2 text-dark">
                        </label>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">
                                @(Model.Product.Id != 0 ? "Edit" : "Create")
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back to list
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <img src="@Model.Product.ImageUrl" width="100%" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
