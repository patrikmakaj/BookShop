@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Edit Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 text-white">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0x shadow" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <label asp-for="Title" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label asp-for="Description" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                    <label asp-for="ISBN" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                    <label asp-for="Author" class="ms-2 text-dark"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" asp-for="Price" step="0.01" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <label asp-for="Price" class="ms-2 text-dark">
                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" asp-for="ListPrice" step="0.01" class="form-control border-0 shadow" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                    <label asp-for="ListPrice" class="ms-2 text-dark">
                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" asp-for="Price50" step="0.01" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                    <label asp-for="Price50" class="ms-2 text-dark">
                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="number" asp-for="Price100" step="0.01" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                    <label asp-for="Price100" class="ms-2 text-dark">
                    </label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Submit
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
