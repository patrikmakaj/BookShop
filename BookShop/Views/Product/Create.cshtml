@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Create Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 text-white">
        <form method="post">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0x shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <label asp-for="Name" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label asp-for="Description" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                    <label asp-for="Author" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="YearOfPublish" class="form-control border-0 shadow" />
                    <span asp-validation-for="YearOfPublish" class="text-danger"></span>
                    <label asp-for="YearOfPublish" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                    <label asp-for="Price" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Picture" class="form-control border-0 shadow" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                    <label asp-for="Picture" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="NumberOfPages" class="form-control border-0 shadow" />
                    <span asp-validation-for="NumberOfPages" class="text-danger"></span>
                    <label asp-for="NumberOfPages" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Category" class="form-control border-0 shadow" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                    <label asp-for="Category" class="ms-2 text-dark">

                    </label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}