@{
    ViewData["Title"] = "Products";
}
@model List<Product>


<div class="container">
    <div class="row pt-4">

        <div class="col-6">
            <h4 class"text-primary">
                Product list
            </h4>
        </div>

        <div class="col-6 text-end">
            <a asp-contoller="" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>

    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Author
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@product.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@product.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>